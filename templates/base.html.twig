<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Prostage{% endblock %}</title>
		 <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        
		
		<!-- BLOC DE FEUILLE DE STYLE -->
		{% block stylesheets %}
		<link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
		{% endblock %}
    </head>
    <body>
		<div class="container-fluid">
	
		
		<!-- BLOC DU MENU -->
		{% block menu %}
		<div class="row">
		<div class="col-md-12">
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				 
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="navbar-toggler-icon"></span>
				</button> <a class="navbar-brand" href="/">Accueil</a>
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="navbar-nav">
						<li class="nav-item active">
							 <a class="nav-link" href="/entreprises">filtrer les stages par entreprise</a>
						</li>
						<li class="nav-item active">
							 <a class="nav-link" href="/formations">filtrer les stages par formation</a>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</div>
		{% endblock %}
		
		<!-- BLOC DU CONTENU -->
		{% block contenu %}
		<div class="row">
		<div class="col-md-12">
			<div class="card">
				<h5 class="card-header">
					{% block titrePage %}{% endblock %}
				</h5>
				<div class="card-body">
					<p class="card-text">
						{% block contenuPage %}{% endblock %}
					</p>
				</div>
			</div>
		</div>
	</div>
		{% endblock %}
		
		<!-- BLOC DU FOOTER -->
		{% block footer %}
		<div class="row">
		<div class="col-md-12">
		</div>
	</div>
</div>
		{% endblock %}
		
		<!-- BLOC JAVA SCRIPT -->
        {% block javascripts %}
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="{{asset('/js/bootstrap.min.js')}}"></script>
		{% endblock %}
		</div>
	</body>
</html>
